<resources>

    <!--common-->
    <style name="viewlib_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="viewlib_match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="viewlib_match_horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="viewlib_match_vertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!--divider-->
    <style name="viewlib_divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:background">@color/app_divider_color</item>
    </style>


    <style name="viewlib_divider_vertical">
        <item name="android:layout_width">@dimen/min_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_divider_color</item>
    </style>


    <!--textview-->
    <style name="text_base" parent="viewlib_wrap">
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>


    <style name="viewlib_text_small" parent="text_base">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="viewlib_text_smallblack" parent="text_base">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_button" parent="viewlib_wrap">
        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <style name="button_withenable" parent="text_button">
        <item name="android:textColor">@color/button_withenable_textcolor</item>
    </style>

    <style name="double_button_style" parent="@style/button_withenable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dialog_white_button</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
