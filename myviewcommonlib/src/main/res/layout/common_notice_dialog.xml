<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@color/viewlib_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dialog_padding">
    <!--android:minHeight="175dp"-->
    <TextView
        android:id="@+id/dialog_title"
        style="@style/viewlib_text_smallblack"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dialog_padding"
        android:gravity="center"
        android:minWidth="275dp"
        android:paddingLeft="@dimen/app_pagepadding"
        android:textSize="@dimen/text_mid"
        android:textStyle="bold"
        tools:background="#D02090"
        tools:text="dfsafd" />

    <TextView
        android:id="@+id/dialog_message"
        style="@style/viewlib_text_smallblack"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dialog_text_margin"
        android:gravity="left"
        android:paddingLeft="@dimen/app_pagepadding"
        android:paddingRight="@dimen/app_pagepadding"
        tools:text="删除" />


    <EditText
        android:id="@+id/dialog_edittext"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/dialog_padding"
        android:layout_marginRight="@dimen/dialog_padding"
        android:layout_marginBottom="@dimen/dialog_text_margin"
        android:background="@drawable/hollow_roundconner_gray" />

    <ProgressBar
        android:id="@+id/dialog_progressBar"
        style="@style/viewlib_wrap"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/dialog_scroller"
        style="@style/viewlib_wrap"

        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/app_pagepadding"

        android:paddingRight="@dimen/app_pagepadding"
        android:visibility="gone"
        tools:background="#DA70D6">

        <TextView
            android:id="@+id/dialog_scrollermessage"
            style="@style/viewlib_wrap"

            />
    </ScrollView>


    <TextView style="@style/viewlib_divider_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dialog_button_hight"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel"
            style="@style/double_button_style"
            android:text="@string/cancel" />

        <TextView
            android:layout_width="@dimen/min_size"
            android:layout_height="match_parent"
            android:background="@color/app_divider_color" />

        <Button
            android:id="@+id/dialog_confirm"
            android:background="@color/viewlib_blue"
            style="@style/double_button_style"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>